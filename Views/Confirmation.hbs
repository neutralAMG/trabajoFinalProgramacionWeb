<body>
    <div class="container mt-5">
        <div class="alert alert-warning text-center">
            <h4>Are you sure you want to {{action}}?</h4>
            {{#if itemId}}
                <p>Item ID: {{itemId}}</p>
            {{/if}}
        </div>
        
        <form action="/account/change-active-state" method="post">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <input type="hidden" name="Id" value="{{itemId}}">
            <input type="hidden" name="url" value="{{redirectUrl}}">
            
            <!-- Confirmation Button -->
            <button class="btn btn-danger" type="submit">Yes, Confirm</button>
        </form>

        <a href="{{redirectUrl}}" class="btn btn-secondary">Cancel</a>
    </div>