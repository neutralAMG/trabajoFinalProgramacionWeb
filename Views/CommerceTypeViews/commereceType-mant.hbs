<div class="row col-12 d-flex justify-content-center">
     <h1 class="display-2 text-center p-2">COMMERECE TYPES</h1>
        <div class="d-flex justify-content-center text-center">
            <a href="/commereceType/commerceType-add" class="btn btn-success">Add a new commerece type</a>
        </div>
    <div class="col-10 d-flex justify-content-center"> 
       
            <table class="table table-hover text-center table-responsive mb-0">
                <thead>
                        <tr>
                            <th class=" th-lg"><a>Name</a></th>
                            <th class="th-lg">Description</th>
                            <th class="th-lg">Cnt</a></th>
                            <th class="th-lg">Actions</th>
                        </tr>
                </thead>
                <tbody>
                        {{#each commereceTypes as |commereceType|}}
                        <tr>
                            <th scope="row"> 
                             <div class="d-flex justify-content-center">
                                <img src="{{commereceType.Icon}}" 
                                style="width: 45px; height: 45px;" 
                                class="rounded-circle" 
                                alt="commerce type icon"> 
                                <p class="p-2 ">
                                    {{commereceType.Name}}
                                </p>
                             </div> 
                            </th>
                            <td>{{commereceType.Description}}</td>
                            <td>{{commereceType.commereceCount}}</td>
                            <td><div class="d-flex justify-content-center text-center">
                                <form action="/commereceType/commerceType-delete" method="post" class="w-50" onsubmit=" return confirm('You sure you want to delete this admin?');" >
                                  <input type="hidden" value="{{commereceType.Id}}" name="Id"/>
                                  <button class="btn btn-danger">Delete</button>
                                </form>
                               <a href="/commereceType/commerceType-edit/{{commereceType.Id}}" class="btn btn-info w-50">Edit</a>
                            </div></td>
                         </tr>
                    {{/each}}
                </tbody>
            </table>
    </div>
</div>