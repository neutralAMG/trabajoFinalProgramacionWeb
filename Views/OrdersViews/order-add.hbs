    //TODO: implement submit logic

    const orderItemsInput = document.createElement("input");
    orderItemsInput.type ="hidden";
    orderItemsInput.value = JSON.stringify(OrderItems);
    orderItemsInput.name = "OrderItems";
    orderItemsInput.id = "OrderItems";

    const totalInput = document.createElement("input");
    orderItemsInput.type ="hidden";
    orderItemsInput.value = Total;
    orderItemsInput.name = "TotalAfterTax";
    orderItemsInput.id = "TotalAfterTax";

    const totalBeforeTax = document.createElement("input");
    orderItemsInput.type ="hidden";
    orderItemsInput.value = TotalBeforeTax;
