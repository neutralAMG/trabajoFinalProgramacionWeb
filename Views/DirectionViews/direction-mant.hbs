<div class="row col-12 d-flex justify-content-center">
    <div class="col-10 d-flex justify-content-center"> 
        <h1 class="display-2">CLIENT DIRECTIONS</h1>
        <div>
            <a href="/direction/direction-add" class="btn btn-success">Add a new direction</a>
        </div>
            <table class="table table-hover table-responsive mb-0">
                <thead>
                        <tr>
                            <th class="row"><a>Name</a></th>
                            <th class="th-lg"><a href="">Description</a></th>
                            <th class="th-lg"><a href="">Actions</a></th>
                        </tr>
                </thead>
                <tbody>
                        {{{#each directions as |direction|}}
                        <tr>
                            <th scope="row">{{direction.Name}}</th>
                            <td>{{direction.Description}}</td>
                            <td><div class="text-center">
                                <form action="/direction/direction-delete" method="post">
                                  <input type="hidden" value="{{direction.Id}}" name="Id"/>
                                  <button class="btn btn-danger">Delete</button>
                                </form>
                               <a href="/direction/direction-edit/{{direction.Id}}" class="btn btn-info">Edit</a>
                            </div></td>
                         </tr>
                    {{/each}}}
                </tbody>
            </table>
    </div>
</div>