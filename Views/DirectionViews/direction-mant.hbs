
<div class="row col-12 d-flex justify-content-center">
     <h1 class="display-2 text-center p-2">CLIENT DIRECTIONS</h1>
        <div class="d-flex justify-content-center text-center">
            <a href="/direction/direction-add" class="btn btn-success">Add a new direction</a>
        </div>
    <div class="col-10 d-flex justify-content-center"> 
       
            <table class="table table-hover text-center table-responsive mb-0">
                <thead>
                        <tr>
                            <th class=" th-lg">Name</th>
                            <th class="th-lg">Description</th>
                            <th class="th-lg">Actions</th>
                        </tr>
                </thead>
                <tbody>
                        {{#each directions as |direction|}}
                        <tr>
                            <th scope="row"> 
                             <div class="d-flex justify-content-center">
                                <p class="p-2 ">
                                    {{direction.Name}}
                                </p>
                             </div> 
                            </th>
                            <td>{{direction.Description}}</td>
                            <td><div class="d-flex justify-content-center text-center">
                                <form action="/direction/direction-delete" method="post" class="w-50" onsubmit=" return confirm('You sure you want to delete this direction?');" >
                                  <input type="hidden" value="{{direction.Id}}" name="Id"/>
                                  <button class="btn btn-danger">Delete</button>
                                </form>
                               <a href="/direction/direction-edit/{{direction.Id}}" class="btn btn-info w-50">Edit</a>
                            </div></td>
                         </tr>
                    {{/each}}
                </tbody>
            </table>
    </div>
</div>