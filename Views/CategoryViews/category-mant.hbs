<div class="row col-12 d-flex justify-content-center">
     <h1 class="display-2 text-center p-2">PRODUCTS CATEGORIES</h1>
        <div class="d-flex justify-content-center text-center">
            <a href="/category/category-add" class="btn btn-success">Add a new category</a>
        </div>
    <div class="col-10 d-flex justify-content-center"> 
       
            <table class="table table-hover text-center table-responsive mb-0">
                <thead>
                        <tr>
                            <th class=" th-lg"><a>Name</a></th>
                            <th class="th-lg">Description</th>
                            <th class="th-lg">Cnt</a></th>
                            <th class="th-lg">Actions</th>
                        </tr>
                </thead>
                <tbody>
                        {{#each categories as |category|}}
                        <tr>
                            <th scope="row"> 
                             <div class="d-flex justify-content-center">
                                <p class="p-2 ">
                                    {{category.Name}}
                                </p>
                             </div> 
                            </th>
                            <td>{{category.Description}}</td>
                            <td>{{category.amountProduct}}</td>
                            <td><div class="d-flex justify-content-center text-center">
                                <form action="/category/category-delete" method="post" class="w-50" onsubmit=" return confirm('You sure you want to delete this category?');" >
                                  <input type="hidden" value="{{category.Id}}" name="Id"/>
                                  <button class="btn btn-danger">Delete</button>
                                </form>
                               <a href="/category/category-edit/{{category.Id}}" class="btn btn-info w-50">Edit</a>
                            </div></td>
                         </tr>
                    {{/each}}
                </tbody>
            </table>
    </div>
</div>