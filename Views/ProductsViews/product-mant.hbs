<div class="row col-12 d-flex justify-content-center">
    <div class="col-10 d-flex justify-content-center"> 
       <h1 class="display-2">COMMERECE PRODUCT</h1>
        <div>
            <a href="/product/prod-add" class="btn btn-success">Add a new product</a>
        </div>
<table class="table align-middle mb-0 bg-white">
  <thead class="bg-light">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Discount</th>
      <th>Category</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each products as |product|}}
    <tr>
      <td>
        <div class="d-flex align-items-center">
          <img
              src="{{product.Photo}}"
              alt=""
              style="width: 45px; height: 45px"
              class="rounded-circle"
              />
          <div class="ms-3">
            <p class="">{{product.Name}}</p>
          </div>
        </div>
      </td>
      <td>
        <p class="mb-0">{{product.Description}}</p>
      </td>
      <td>{{product.Price}}</td>
      <td>{{product.Discount}}</td>
      <td>{{product.Category.dataValues.Name}}</td>
      <td>
            <form action="/product/prod-delete" method="post">
                <input type="hidden" value="{{product.Id}}" name="Id"/>
            <button class="btn btn-danger">Delete</button>
            </form>
            <a href="/product/prod-edit/{{product.Id}}"  class="btn btn-link btn-sm btn-rounded">
            Edit
            </a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>  
</div>
</div>