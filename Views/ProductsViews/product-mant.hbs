<div class="row col-12 d-flex justify-content-center">
     <h1 class="display-2 text-center p-2">PRODUCTS CATEGORIES</h1>
        <div class="d-flex justify-content-center text-center">
            <a href="/product/product-add" class="btn btn-success">Add a new category</a>
        </div>
    <div class="col-10 d-flex justify-content-center"> 
       
            <table class="table table-hover text-center table-responsive mb-0">
                <thead>
                        <tr>
                            <th class=" th-lg"><a>Name</a></th>
                            <th class="th-lg">Description</th>
                            <th class="th-lg">Category</th>
                            <th class="th-lg">Price</th>
                            <th class="th-lg">Actions</th>
                        </tr>
                </thead>
                <tbody>
                  //TODO: if the user is manager let the user change the discount
                        {{#each products as |product|}}
                        <tr>
                            <th scope="row"> 
                             <div class="d-flex justify-content-center">
                              <img style="height: 45px; width: 45px;" 
                              class="rounded-circle" 
                              src="{{product.Photo}}" 
                              alt="{{product.Name}} image">
                                <p class="p-2 ">
                                    {{product.Name}}
                                </p>
                             </div> 
                            </th>
                            <td>{{product.Description}}</td>
                            <td>{{product.Category.Name}}</td>
                            <td>{{product.Price}}</td>
                            <td><div class="d-flex justify-content-center text-center">
                                <form action="/product/product-delete" method="post" class="w-50" onsubmit=" return confirm('You sure you want to delete this product?');" >
                                  <input type="hidden" value="{{product.Id}}" name="Id"/>
                                  <button class="btn btn-danger">Delete</button>
                                </form>
                               <a href="/product/product-edit/{{product.Id}}" class="btn btn-info w-50">Edit</a>
                            </div></td>
                         </tr>
                    {{/each}}
                </tbody>
            </table>
    </div>
</div>